<% content_for :title, @post.title %>

<div class="content__centered">
  <div class="breadcrumbs">
    <%= link_to "News", blog_posts_path %> &raquo; <%= @post.title %>
  </div>

  <div class='blog-post__header'>
    <h1><%= @post.title %></h1>

    <div class='blog-post__posted-at'>
      Posted
      <%= @post.posted_at.localtime.to_s(:long) %>
    </div>
  </div>


  <article>
    <div class='quill-output'><%= @post.content.html_safe %></div>
  </article>
</div>
